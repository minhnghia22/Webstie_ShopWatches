@model IEnumerable<ShopWatches.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var i = 0;
}

<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Dashboard</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="#">Admin</a></li>
                            <li><a href="#">Category</a></li>
                            <li class="active">List</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                @Html.Partial("_MessgeAlert")
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Product Category Management</strong>
                        <div style="float: right">
                            @Html.ActionLink("Add Category", "Create")
                        </div>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Descrption</th>
                                    <th scope="col">Setting</th>
                                </tr>
                            </thead>

                            <tbody>
                                @*Html.DisplayFor() sẽ hiển thị DisplayTemplate phù hợp với loại của thuộc tính.*@
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row">
                                            @(++i)
                                        </th>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.descrption)
                                        </td>
                                        <td>
                                            <a class="btn btn-sm btn-light text-warning border" href="@Url.Action("Edit", "Categories", new { id = item.ID })"><i class="fa fa-edit"></i></a>&nbsp;

                                            <a class="btn btn-sm btn-light text-danger border" href=" @Url.Action("Delete", "Categories", new { id = item.ID })" 
                                               onclick="return confirm('Are you sure want delete?')"><i class="fa fa-trash-o"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- .animated -->
</div>