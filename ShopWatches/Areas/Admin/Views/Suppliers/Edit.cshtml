@model ShopWatches.Models.Supplier

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Dashboard</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="#">Admin</a></li>
                            <li><a href="#">Supplier</a></li>
                            <li class="active">Edit</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
      @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IDSup)
<div class="content">
    <div class="animated fadeIn">

        <div class="row">

            <div class="col-xs-12 col-sm-12">
                @Html.Partial("_MessgeAlert")
                <div class="card">
                    <div class="card-header">
                        <b>Edit Supplier </b>
                        <div style="float: right">
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                    </div>
                    <div class="card-body card-block">
                        <div class="form-group">
                            <label class=" form-control-label">Name Supplier</label>
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-user"></i></div>
                               @Html.EditorFor(model => model.nameSup, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.nameSup, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label class=" form-control-label">Phone</label>
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-star-o"></i></div>
                                 @Html.EditorFor(model => model.phoneSup, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.phoneSup, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label class=" form-control-label">Email</label>
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-star-o"></i></div>
                                @Html.EditorFor(model => model.emailSup, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.emailSup, "", new { @class = "text-danger" })
                        </div>
                        <div classs="form-group">
                            <label class=" form-control-label">Address</label>
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-star-o"></i></div>
                                @Html.TextAreaFor(model => model.addressSup, new { @class = "form-control textArea" })
                            </div>
                            @Html.ValidationMessageFor(model => model.addressSup, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-xs-4 col-sm-4">
                        <button type="submit" value="Save" class="btn btn-outline-success">Save</button>&nbsp;
                       
                    </div>
                </div>
            </div>
        </div>


    </div><!-- .animated -->
</div>
}






