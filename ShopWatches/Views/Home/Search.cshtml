@model IEnumerable<ShopWatches.Models.Product>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_LayoutHomePage.cshtml";

}
@if (Model.Count() > 0)
{
   
    <main>
        <section class="popular-items latest-padding">
            <div class="container">
                <div class="row product-btn justify-content-between mb-40">
                    <div class="properties__button">
                        <h2>Results (@Model.Count())</h2>
                        <!--Nav Button  -->
                        <form action="search" method="get">
                            <label>Search: </label>
                            <input type="text" name="name" value="" placeholder="Search by name product" /> <button type="submit"><span class="flaticon-search black-color"></span></button>
                        </form>

                        <!--End Nav Button  -->
                    </div>
                    <!-- Grid and List view -->
                    <div class="grid-list-view">
                    </div>
                    <!-- Select items -->
                    <div class="select-this">
                        <form action="#">
                            <div class="select-itms">

                            </div>
                        </form>
                    </div>
                </div>
                <!-- Nav Card -->
                <div class="tab-content" id="nav-tabContent">
                    <!-- card one -->
                    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                        <div class="row">


                            @foreach (var item in Model)
                            {
                                <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6">
                                    <div class="single-popular-items mb-50 text-center">
                                        <div class="popular-img">
                                            <img src="@Html.DisplayFor(modelItem => item.img)" alt="">
                                            <div class="img-cap">
                                                <h3><a href="/Home/product_details/@item.ID"><span>View details</span></a></h3>
                                            </div>
                                            <div class="favorit-items">
                                                <span class="flaticon-heart"></span>
                                            </div>
                                        </div>
                                        <div class="popular-caption">
                                            <h3><a href="/Home/product_details/@item.ID">@Html.DisplayFor(modelItem => item.name)</a></h3>
                                            <span>@Html.DisplayFor(modelItem => item.price) $</span>
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>
                <!-- End Nav Card -->
            </div>
        </section>
    </main>
}
else
{
<h2 class="text-center">
    No results match!! 
</h2>
}
