@model ShopWatches.Models.Customer

@{
    ViewBag.Title = "Login";
}

<h2><center>Login</center></h2>

<div style="padding-left: 25%; ">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2"> Email</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.emailCtm, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.emailCtm, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"> Password</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.passwordCtm, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.passwordCtm, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-3 col-md-10">

                <input type="submit" value="LOGIN" class="btn btn-default" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-5">
                @Html.ActionLink("Don't have account. Register ?", "Register")
            </div>
        </div>
    </div>
    }
   
</div>


<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
