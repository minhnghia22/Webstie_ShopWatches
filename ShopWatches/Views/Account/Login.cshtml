@model ShopWatches.Models.Customer

@{
    ViewBag.Title = "Login";
}

<h2><center>Login</center></h2>

<div style="padding-left: 25%; ">

    <div class="form-horizontal">

        <hr />
        <p class="text-danger">@ViewBag.mess</p>
        <form action="Login" method="post">
            <div class="form-group">
                <label class="control-label col-md-2"> Email</label>
                <div class="col-md-10">
                    <input type="email" name="emailCtm" value="" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2"> Password</label>
                <div class="col-md-10">
                    <input type="password" name="passwordCtm" value="" class="form-control" />

                </div>
            </div>



            <div class="form-group">
                <div class="col-md-offset-3 col-md-10">

                    <input type="submit" value="LOGIN" class="btn btn-default" />
                </div>
            </div>
        </form>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-5">
                @Html.ActionLink("Don't have account. Register ?", "Register")
            </div>
        </div>
    </div>


</div>


<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
