@model ShopWatches.Models.Customer

@{
    ViewBag.Title = "Update";
}

<h2>Change My Profile</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.IDCtm)
    

    <div class="form-group">
        <label class="control-label col-md-2"> Fullname</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.nameCtm, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nameCtm, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2"> Password</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.passwordCtm, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.passwordCtm, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <label class="control-label col-md-2"> Phone</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.phoneCtm, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.phoneCtm, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-3 col-md-10">
            <input type="submit" value="SAVE" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back Home Page", "Home/Index")
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
