@model ShopWatches.Models.Customer

@{
    ViewBag.Title = "Update";
}

<h2>Change My Profile</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.IDCtm)
    @Html.HiddenFor(model => model.emailCtm)
    @Html.HiddenFor(model => model.passwordCtm)

    <div class="form-group">
        <label class="control-label col-md-2"> Full Name</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.nameCtm, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nameCtm, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Gender</label>
        <div class="col-md-10">
            <select name="genderCtm" class="form-control">
                <option value="Female">Female</option>
                <option value="Male">Male</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2"> Number Phone</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.phoneCtm, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.phoneCtm, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2"> Address</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.addressCtm, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.addressCtm, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <label class="control-label col-md-2"> Birthday</label>
        <div class="col-md-10">
            <input class="form-control" type="date" name="birthdayCtm" value="" />
            @Html.ValidationMessageFor(model => model.birthdayCtm, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-3 col-md-10">
            <input type="submit" value="SAVE" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back Home Page", "../Home/Index")
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
