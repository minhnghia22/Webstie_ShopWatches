@model ShopWatches.Models.Customer

@{
    ViewBag.Title = "Register";
}

<div style="padding-left: 25%; ">
    <h2>Register</h2>
</div>
    


    @using (Html.BeginForm(new { onsubmit = "checkSub()" }))
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label class="control-label col-md-2"> Full Name</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.nameCtm, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nameCtm, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Gender</label>
        <div class="col-md-10">
            <select name="genderCtm" class="form-control">
                <option value="Female">Female</option>
                <option value="Male">Male</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2"> Email</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.emailCtm, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.emailCtm, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2"> Password</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.passwordCtm, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.passwordCtm, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2"> Comfirm Password</label>
        <div class="col-md-10">
            <input type="password" name="cofirmPass" id="cofirmPass" class="form-control" onkeyup='check();' />
            <span id="message" class=""></span>
        </div>
    </div>


    <div class="form-group">
        <label class="control-label col-md-2"> Number Phone</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.phoneCtm, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.phoneCtm, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <label class="control-label col-md-2"> Address</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.addressCtm, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.addressCtm, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <label class="control-label col-md-2"> Birthday</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.birthdayCtm, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.birthdayCtm, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-3 col-md-10">
            <input type="submit" value="REGISTER" class="btn btn-default" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-2">
            <div>
                @Html.ActionLink("Login now", "Login")
            </div>
        </div>
    </div>
</div>
    }



    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script>
        var check = function () {
            if (document.getElementById('passwordCtm').value ==
                document.getElementById('cofirmPass').value) {
                document.getElementById('message').style.color = 'green';
                document.getElementById('message').innerHTML = '';
            } else {
                document.getElementById('message').style.color = 'red';
                document.getElementById('message').innerHTML = 'not matching';
            }
        }
        var checkSub = function () {
            return (document.getElementById('passwordCtm').value == document.getElementById('cofirmPass').value);
        }

    </script>
