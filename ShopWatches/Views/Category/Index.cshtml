@model IEnumerable<ShopWatches.Models.Categories_Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutHomePage.cshtml";
    List<ShopWatches.Models.Category> Cate = (List<ShopWatches.Models.Category>)ViewBag.Cate;
    var id = ViewBag.ID;
}
<main>
    <section class="popular-items latest-padding">
        <div class="container">
            <div class="row product-btn justify-content-between mb-40">
                <div class="properties__button">
                    <!--Nav Button  -->
                    <nav>

                        <div class="nav nav-tabs" id="nav-tab" role="tablist">
                            <a class="nav-item nav-link" id="nav-home-tab" href="/../Home/Menu" role="tab" aria-controls="nav-home" aria-selected="false">All Product</a>
                            @{foreach (var item in Cate)
                                {
                                    if (item.ID == id)
                                    {
                                        <a class="nav-item nav-link active" id="nav-profile-tab" href="../Index/@item.ID" role="tab" aria-controls="nav-profile" aria-selected="true">@item.name</a>
                                    }
                                    else { 
                                    <a class="nav-item nav-link" id="nav-profile-tab" href="../Index/@item.ID" role="tab" aria-controls="nav-profile" aria-selected="false">@item.name</a>
                                    }
                                }
                            }


                        </div>
                    </nav>
                    <!--End Nav Button  -->
                </div>
                <!-- Grid and List view -->
                <div class="grid-list-view">
                </div>
                <!-- Select items -->
                <div class="select-this">
                    <form action="#">
                        <div class="select-itms">

                        </div>
                    </form>
                </div>
            </div>
            <!-- Nav Card -->
            <div class="tab-content" id="nav-tabContent">
                <!-- card one -->
                <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                    <div class="row">


                        @foreach (var item in Model)
                        {
                            <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6">
                                <div class="single-popular-items mb-50 text-center">
                                    <div class="popular-img">
                                        <img src="@item.Product.img" alt="">
                                        <div class="img-cap">
                                            <h3><a href="/Home/product_details/@item.Product.ID"><span>View details</span></a></h3>
                                        </div>
                                        <div class="favorit-items">
                                            <span class="flaticon-heart"></span>
                                        </div>
                                    </div>
                                    <div class="popular-caption">
                                        <h3><a href="/Home/product_details/@item.Product.ID">@item.Product.name</a></h3>
                                        <span>@item.Product.price</span>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
            <!-- End Nav Card -->
        </div>
    </section>
</main>

